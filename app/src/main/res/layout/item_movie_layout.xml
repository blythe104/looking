<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/iv_movie"
                   android:layout_width="70dp"
                   android:layout_height="86dp"
                   android:layout_marginLeft="@dimen/margin_left"
                   android:src="@mipmap/movie"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="@dimen/margin_left"
                      android:layout_marginRight="@dimen/margin_right"
                      android:layout_weight="1"
                      android:gravity="left|center"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:id="@+id/movie"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:text="--"
                          android:textColor="@color/colorBlack"
                          android:textSize="13sp"/>
                <TextView android:id="@+id/score"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="--"
                          android:textColor="@color/themeColor"
                          android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginRight="@dimen/margin_right"
                          android:orientation="horizontal">
                <TextView android:id="@+id/director"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:ellipsize="end"
                          android:lines="1"
                          android:text="--"
                          android:layout_marginTop="2dp"
                          android:textSize="11sp"/>
            </LinearLayout>

            <TextView android:id="@+id/actors"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:ellipsize="end"
                      android:lines="1"
                      android:text="--"
                      android:layout_marginTop="2dp"
                      android:textSize="11sp"/>

            <TextView android:id="@+id/musername"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:lines="1"
                      android:text="--"
                      android:layout_marginTop="2dp"
                      android:textSize="11sp"/>

        </LinearLayout>
    </LinearLayout>
    <View android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="@color/themeColor"/>

</LinearLayout>
