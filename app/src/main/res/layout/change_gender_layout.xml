<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_edittext_border"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:text="性别选择"
        android:textColor="@color/themeTextBlack"
        android:textSize="@dimen/mid_textsize"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/themeColor"></View>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/tv_boy"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableBottom="@drawable/selector_radio_boy"
            android:gravity="center"
            android:text="男"
            android:textColor="@color/themeTextBlack"
            android:textSize="@dimen/mid_textsize"/>

        <RadioButton
            android:id="@+id/tv_none"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:drawableBottom="@mipmap/img_video"
            android:gravity="center"
            android:text="秘密"
            android:button="@null"
            android:textColor="@color/themeTextBlack"
            android:textSize="@dimen/mid_textsize"/>

        <RadioButton
            android:id="@+id/tv_girl"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:button="@null"
            android:drawableBottom="@drawable/selector_radio_girl"
            android:gravity="center"
            android:text="女"
            android:textColor="@color/themeTextBlack"
            android:textSize="@dimen/mid_textsize"/>

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/themeColor"></View>

    <Button
        android:id="@+id/btn_canel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/themeTextBlack"
        android:textSize="@dimen/mid_textsize"
        />

</LinearLayout>

